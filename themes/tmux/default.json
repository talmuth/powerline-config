{
  "default_module": "powerline.segments.common",
  "segment_data": {
    "date": {
      "before": "⌚"
    }
  },
  "segments": {
    "left": [
      {
        "name": "hostname",
        "args": {
          "exclude_domain": true
        }
      },
      {
        "name": "weather",
        "priority": 50,
        "args": {
          "location_query": "Baryshevka, Ukraine"
        }
      }
    ],
    "right": [
      {
        "name": "network_load",
        "priority": 50,
        "args": {
          "recv_format": "↓{value:>8}",
          "sent_format": " ↑{value:>8}"
        }
      },
      {
        "name": "system_load",
        "priority": 50
      },
      {
        "name": "date"
      },
      {
        "name": "date",
        "args": {
          "format": "%H:%M",
          "istime": true
        }
      }
    ]
  }
}

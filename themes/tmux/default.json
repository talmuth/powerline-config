{
  "default_module": "powerline.segments.common",
  "segments": {
    "left": [
      {
        "name": "hostname",
        "args": {
          "exclude_domain": true
        }
      },
      {
        "name": "weather",
        "priority": 50,
        "args": {
          "location_query": "Baryshevka, Ukraine"
        }
      }
    ],
    "right": [
      {
        "name": "system_load",
        "priority": 50
      },
      {
        "name": "date",
        "args": {
          "format": "%Y/%m/%d %H:%M",
          "istime": true
        }
      }
    ]
  }
}
